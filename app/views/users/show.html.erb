<% provide(:title, @user.name) %>
<div class="row">
  <%# ユーザ情報 %>
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>

  <%# 投稿一覧 %>
  <div class="col-md-8">
    <% if @user.microposts.any? %>
      <h3>Microposts (<%= @user.microposts.count %>)</h3>
      <ol class="microposts">
        <%# パーシャル %>
        <%= render @microposts %>
      </ol>
      <%# usersコントローラから@micropostsを送っているため引数が必要になる %>
      <%= will_paginate @microposts %>
    <% end %>
  </div>
</div>
